<UserControl x:Class="УППО_Пропуски.UserControls.ForemanUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:УППО_Пропуски.UserControls"
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="DarkBlue" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image x:Name="UserPhotoImage" Source="../Assets/Images/PlaceholderImageMale.jpg" MaxHeight="200" Margin="5" Grid.RowSpan="5"/>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Полное имя: " x:Name="FullNameTextBlock" Grid.Column="0"/>
                    <TextBlock Text="Пол: " x:Name="GenderTextBlock" Grid.Column="1"/>
                    <TextBlock Text="Дата рождения: " x:Name="BirthdateTextBlock" Grid.Column="2"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="DivisionTextBlock" Text="Подразделение: " Grid.Row="1" Grid.Column="0"/>
                    <TextBlock x:Name="StatusTextBlock" Text="Статус: " Grid.Row="1" Grid.Column="2"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Может проходить в другие цеха?"/>
                    <CheckBox x:Name="CanVisitOtherWorkshopsCheckBox" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" IsEnabled="False">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                    <TextBlock Text="Подтвержден?" Grid.Column="2"/>
                    <CheckBox x:Name="IsVerificatedCheckBox" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" IsEnabled="False">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
